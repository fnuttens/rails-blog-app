<div class="page-title d-flex bg-dark" aria-label="Page title">
    <div class="container text-center align-self-center">
        <h1 class="page-title-heading text-white">Categories</h1>
    </div>
</div>

<% if author_signed_in? %>
    <%= link_to "Add a category", new_category_path, class: "btn btn-primary" %>
<% end %>

<div class="container">
<div class="row">
<div class="card-deck">
    <% @categories.each do |category| %>
        <div class="card mb-30">
            <img src="path-to-image" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">
                    <%= link_to category.name, category_path(category) %>
                </h4>
            </div>
        </div>
    <% end %>
</div>
</div>
</div>

<div class="apple_pagination">
    <%= will_paginate @categories %>
</div>
